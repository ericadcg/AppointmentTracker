@page
@model AppointmentTracker.Pages.Appointments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Client.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Details)
        </dd>
    </dl>
    @if (Model.Appointment.StartDate >= DateTime.Now)
    {
        <form method="post">
            <input type="submit" value="Notify by email" asp-net-handler="SendEmail" asp-route-id="@Model.Appointment.Id" />
        </form>
    }
    <br />
    @if (Model.Appointment.StartDate >= DateTime.Now)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Appointment.Id">Edit |</a> 
    }
    @if (Model.Appointment.StartDate >= DateTime.Now)
    {
        <a asp-page="./Delete" asp-route-id="@Model.Appointment.Id">Delete |</a> 
    }
    <a asp-page="./Index">Back to List</a>
</div>
